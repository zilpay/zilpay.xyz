{
  "name": "zilpay.xyz",
  "version": "1.0.0",
  "description": "ZilPay is a (Chrome, FireFox, Opera) wallet for Zilliqa.",
  "title": "ZilPay",
  "author": "Rinat",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "ledger:build": "webpack --config ledger-bridge/webpack.config.js --progress --colors -o ./public/ledger-bridge.js",
    "ledger:prod": "cross-env NODE_ENV=production npm run ledger:build && npm run ledger:prod",
    "start": "npm isntall && cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@ledgerhq/hw-transport-u2f": "^4.70.0",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@zilliqa-js/zilliqa": "^0.8.0-alpha.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "nuxt": "^2.0.0",
    "uuidv4": "^5.0.1",
    "vue-bem-cn": "^1.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9",
    "sass-loader": "^8.0.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8"
  }
}
